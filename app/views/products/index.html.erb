<p id="notice"><%= notice %></p>

<h1 id="products-header">Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th id="prod-img">Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= image_tag(product.image_url, class: "product-img") %></td>
        <td class="action-link"><%= link_to 'Show', product %></td>
        <td class="action-link"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="action-link"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

