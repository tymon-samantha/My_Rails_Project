<p id="notice"><%= notice %></p>

<div class="prod-show container">
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <p class="show-p">
        <%= image_tag(@product.image_url, data_zoom_image: @product.image_url, class: "img-responive product-img-show img-zoom") %>
      </p>
    </div><!-- end col 1 -->
    <div class="col-md-6 col-xs-12">
      <p class="show-p">
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p class="show-p">
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p class="show-p">
        <strong>Colour:</strong>
        <%= @product.colour %>
      </p>

      <p class="show-p">
        <strong><span class="glyphicon glyphicon-euro"></span>Price:</strong>
        â‚¬<%= @product.price %>
      </p>

      <p class="show-p">Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
      </p>
      <%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
    </div><!-- end col 2 -->
  </div><!-- end row 1 -->
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <% if signed_in? %>
        <h4 class="comment-header">Add a review:</h4>
          <%= form_for([@product, @product.comments.build]) do |f| %>
            <p class="show-p">
              <%= f.label :body, "Comments" %><br>
              <%= f.text_area :body %>
            </p>
            <p class="show-p">
              <div class="rating"></div>
            </p>
            <p class="show-p">
              <%= f.submit :Submit, :class => "btn btn-secondary" %>
            </p>
          <% end %>
        <% end %>
    </div><!-- end col 1 -->
    <div class="col-md-6 col-xs-12">
      <%= render "comments", product: @comments %>
      <%= will_paginate @comments %>
    </div><!-- end col 2 -->
  </div><!-- end row 2 -->
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <%= @product.highest_rating_comment %>
    </div><!-- end col 1 -->
    <div class="col-md-6 col-xs-12">
      <%= @product.lowest_rating_comment %>
    </div><!-- end col 2 -->
  </div><!-- end row 3 -->
</div><!-- end prod-show -->

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
