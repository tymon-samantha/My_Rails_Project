<p id="notice"><%= notice %></p>

<div class="prod-show">
  <p class="show-p">
    <%= image_tag(@product.image_url, class: "product-img-show") %>
  </p>

  <p class="show-p">
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p class="show-p">
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p class="show-p">
    <strong>Colour:</strong>
    <%= @product.colour %>
  </p>

  <p class="show-p">
    <strong>Price:</strong>
    $<%= @product.price %>
  </p>
</div><!-- end prod-show -->

