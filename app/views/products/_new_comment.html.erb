<% if signed_in? %>
  <h4 class="comment-header">Add a review:</h4>
    <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
      <p class="show-p">
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body %>
      </p>
      <p class="show-p">
        <div class="rating"></div>
      </p>
      <p class="show-p">
        <%= f.submit :Submit, :class => "btn btn-secondary" %>
      </p>
    <% end %>
<% end %>